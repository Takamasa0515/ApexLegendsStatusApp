<turbo-frame id="record">
  <% if match_date.present? %>
    <div class="legend-stats-title">
      <h2><%= match_date.to_s %></h2>
    </div>
  <% end %>
  <% if day_matches.present? %>
    <% day_matches.each do |match| %>
    <div class="legend-stats-card">
      <div class="legend-stats-card-head">
        <span class="legend-icon">
          <%= legend_image_path(match.legend) %>
        </span>
        <span class="legend-name"><%= I18n.t("legend.#{match.legend}") %></span>
      </div>
      <div class="legend-stats-card-body p-0 ps-3">
        <div class="legend-stat">
          <span class="name">キル数</span>
          <span class="value"><%= match.kills.present? ? add_commas_to_number(match.kills) : "---" %></span>
        </div>
        <div class="legend-stat">
          <span class="name">ダメージ数</span>
          <span class="value"><%= match.damages.present? ? add_commas_to_number(match.damages) : "---" %></span>
        </div>
        <div class="legend-stat">
          <span class="name">勝利数</span>
          <span class="value"><%= match.wins.present? ? add_commas_to_number(match.wins) : "---" %></span>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <div class="no-match-result-card">
      <h2>日付をクリックで詳細を表示</h2>
    </div>
  <% end %>
</turbo-frame>
