<% case params.values_at(:controller, :action) %>
<% when ["users", "index"] %>
  <% breadcrumb :users %>
<% when ["users", "show"] %>
  <% breadcrumb :user_show, @user %>
<% when ["users", "search"] %>
  <% breadcrumb :search %>
<% when ["tracker_match_records", "index"] %>
  <% breadcrumb :user_match_record, @user  %>
<% when ["users/registrations", "new"] %>
  <% breadcrumb :sign_up %>
<% when ["devise/sessions", "new"] %>
  <% breadcrumb :log_in %>
<% when ["users/registrations", "edit"] %>
  <% breadcrumb :user_edit, @user %>
<% when ["game_account_info", "edit"] %>
  <% breadcrumb :game_account_info_edit, user %>
<% when ["contacts", "new"] %>
  <% breadcrumb :contact %>
<% when ["contacts", "confirm"] %>
  <% breadcrumb :confirm %>
<% when ["contacts", "complete"] %>
  <% breadcrumb :complete%>
<% end %>
<%= breadcrumbs separator: " &rsaquo; " %>
