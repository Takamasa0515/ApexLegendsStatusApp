<header class="bg-primary bg-gradient text-white">
  <div class="container px-4 mt-10">
    <div class="boxshadow-user-edit">
      <h2 class="container-h2">アカウント編集</h2>
      <hr class="hr-white">
      <%= form_with model: @user, url: user_registration_path, id: 'edit_user', local: true do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="devise-user-edit">
          <div class="devise-form">
            <div class="field-user-edit">
              <%= f.label :email, class: "devise-label-user-edit" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <hr class="hr-white">
            <div class="field-user-edit">
              <%= f.label :self_introduction, class: "devise-label-user-edit" %><br />
              <%= f.text_area :self_introduction, autofocus: true, autocomplete: "email", class: "devise-field" %>
            </div>
            <hr class="hr-white">
            <div class="field-user-edit">
              <%= f.label :current_password, class: "devise-label-user-edit" %>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
            <hr class="hr-white">
            <div class="actions-user-edit">
              <%= f.submit "更新する", class: "btn-dark btn-lg btn btn-border-color-white" %>
            </div>
          <% end %>
        </div>
      </div>
      <hr class="hr-white">
      <%= link_to "アカウントを削除する", registration_path(resource_name), class: "delete-btn", data: { turbo_method: :delete, turbo_confirm: "【確認】アカウントを削除してもよろしいですか？" } %>
    </div>
  </div>
</header>
