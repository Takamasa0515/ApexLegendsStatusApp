<header class="bg-primary bg-gradient text-white">
  <div class="container px-4">
    <div class="boxshadow">
      <h2 class="container-h2">アカウント作成</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', local: true do |f| %>
        <div class="devise">
          <div class="devise-form">
            <div class="field">
              <%= f.label :name, class: "devise-label" %>
              <% if @user.errors.include?(:name) %>
                <p class="error-messages"><%= @user.errors.full_messages_for(:name).first %></p>
              <% end %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
            <div class="field">
              <%= f.label :email, class: "devise-label" %>
              <% if @user.errors.include?(:email) %>
                <p class="error-messages"><%= @user.errors.full_messages_for(:email).first %></p>
              <% end %>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :password, "パスワード(6文字以上)", class: "devise-label" %>
              <% if @user.errors.include?(:password) %>
                <p class="error-messages"><%= @user.errors.full_messages_for(:password).first %></p>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, class: "devise-label" %>
              <% if @user.errors.include?(:password_confirmation) %>
                <p class="error-messages"><%= @user.errors.full_messages_for(:password_confirmation).first %></p>
              <% end %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="signup-actions ">
            <%= f.submit "新規登録", class: "btn-dark btn-lg btn btn-border-color-white" %>
          </div>
        </div>
      <% end %>
      <hr class="hr-white">
      <div>
        <p>すでにアカウントをお持ちの場合は、<%= link_to "こちらからログイン", new_user_session_path, class: "custom-link" %>してください。</p>
      </div>
    </div>
  </div>
</header>
